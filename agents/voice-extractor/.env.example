# ============================================================================
# ERC-8004 CONTRACTS (Deployed on Avalanche Fuji)
# ============================================================================
IDENTITY_REGISTRY=0xB0a405a7345599267CDC0dD16e8e07BAB1f9B618
REPUTATION_REGISTRY=0x932d32194C7A47c0fe246C1d61caF244A4804C6a
VALIDATION_REGISTRY=0x9aF4590035C109859B4163fd8f2224b820d11bc2

# ============================================================================
# GLUE TOKEN
# ============================================================================
GLUE_TOKEN_ADDRESS=0x3D19A80b3bD5CC3a4E55D4b5B753bC36d6A44743

# ============================================================================
# x402 FACILITATOR
# ============================================================================
FACILITATOR_URL=https://facilitator.ultravioletadao.xyz

# ============================================================================
# KARMA-HELLO INTEGRATION
# ============================================================================
KARMA_HELLO_URL=http://localhost:8002
# For production, use: https://karma-hello.ultravioletadao.xyz

# ============================================================================
# VOICE-EXTRACTOR PRICING (in GLUE)
# ============================================================================
PRICE_BASIC=0.02                       # Basic profile (3 categories)
PRICE_STANDARD=0.03                    # Standard profile (5 categories)
PRICE_COMPLETE=0.04                    # Complete profile (8 categories) - recommended for user agents
PRICE_ENTERPRISE=0.40                  # Enterprise analysis (custom deep-dive)

# ============================================================================
# OPENAI (for CrewAI agents)
# ============================================================================
OPENAI_API_KEY=                        # sk-... (required for linguistic analysis)
OPENAI_MODEL=gpt-4o                    # Model for CrewAI agents

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
HOST=0.0.0.0
PORT=8005
LOG_LEVEL=INFO

# ============================================================================
# A2A PROTOCOL
# ============================================================================
AGENT_DOMAIN=voice-extractor.ultravioletadao.xyz
AGENT_NAME=Voice-Extractor
AGENT_VERSION=1.0.0
AGENT_DESCRIPTION=Linguistic style and personality extraction from chat logs

# ============================================================================
# CREWAI CONFIGURATION
# ============================================================================
CREW_VERBOSE=True
CREW_MAX_ITER=50
CREW_TIMEOUT=120                       # seconds per agent

# ============================================================================
# DATA CONFIGURATION
# ============================================================================
# Use local files for testing (true) or buy from Karma-Hello (false)
USE_LOCAL_FILES=true
LOCAL_LOGS_PATH=./test_logs/

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
MAX_CONCURRENT_EXTRACTIONS=3           # Parallel processing limit
CACHE_PROFILES=True                    # Cache extracted profiles
CACHE_TTL=3600                         # Cache time-to-live (seconds)

# ============================================================================
# SECURITY
# ============================================================================
# Enable signature verification for incoming requests
VERIFY_SIGNATURES=True
# Enable encryption for stored profiles
ENCRYPT_PROFILES=True
ENCRYPTION_KEY=                        # 32-byte hex key for profile encryption
