# Client Agent Configuration
# Generic buyer agent that can purchase from Karma-Hello OR Abracadabra

# ============================================
# WALLET CONFIGURATION - AWS SECRETS MANAGER
# ============================================
# Private keys are stored in AWS Secrets Manager (secret: 'karmacadabra')
#
# Setup (one-time):
#   1. Ensure ~/.aws credentials are configured
#   2. Run: python scripts/setup-secrets.py
#
# Local development override (optional):
#   - Leave PRIVATE_KEY empty to fetch from AWS Secrets Manager
#   - OR set PRIVATE_KEY=0x... to use local key (for testing)
#
# The agent will automatically:
#   - Use PRIVATE_KEY if filled in .env
#   - Otherwise, fetch from AWS Secrets Manager 'karmacadabra' secret
#
PRIVATE_KEY=                                     # Leave empty to use AWS Secrets Manager

# Agent wallet address (derived from PRIVATE_KEY)
AGENT_WALLET_ADDRESS=0xYOUR_AGENT_WALLET_ADDRESS

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================
# Avalanche Fuji Testnet RPC
RPC_URL_FUJI=https://avalanche-fuji-c-chain-rpc.publicnode.com
CHAIN_ID=43113

# ============================================
# SMART CONTRACTS (Deployed on Fuji)
# ============================================
# GLUE Token (EIP-3009)
GLUE_TOKEN_ADDRESS=0x3D19A80b3bD5CC3a4E55D4b5B753bC36d6A44743

# ERC-8004 Registries
IDENTITY_REGISTRY=0xB0a405a7345599267CDC0dD16e8e07BAB1f9B618
REPUTATION_REGISTRY=0x932d32194C7A47c0fe246C1d61caF244A4804C6a
VALIDATION_REGISTRY=0x9aF4590035C109859B4163fd8f2224b820d11bc2

# ============================================
# X402 FACILITATOR
# ============================================
# External facilitator for payment verification
FACILITATOR_URL=https://facilitator.ultravioletadao.xyz
# Or use local for testing:
# FACILITATOR_URL=http://localhost:8080

# ============================================
# AI CONFIGURATION
# ============================================
# OpenAI API key for CrewAI agents
OPENAI_API_KEY=sk-...

# Model to use for analysis
OPENAI_MODEL=gpt-4o

# ============================================
# SELLER DISCOVERY (A2A Protocol)
# ============================================
# Known seller endpoints (can discover more via A2A)
KARMA_HELLO_SELLER_URL=http://localhost:3001
ABRACADABRA_SELLER_URL=http://localhost:3002

# ============================================
# CLIENT AGENT SETTINGS
# ============================================
# Agent name/domain for ERC-8004 registration
AGENT_DOMAIN=client-agent.ultravioletadao.xyz

# Maximum price willing to pay per request (in UVD)
MAX_PRICE_PER_REQUEST=1.0

# Enable auto-purchasing (vs manual approval)
AUTO_PURCHASE_ENABLED=false

# Purchase decision criteria
MIN_SELLER_REPUTATION=0  # Minimum seller reputation score (0-100)
REQUIRE_VALIDATION=true  # Require validator before purchase

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=client-agent.log

# ============================================
# DEVELOPMENT
# ============================================
# Use local test data instead of real sellers
USE_MOCK_SELLERS=false
