# Validator Agent - Environment Configuration

# ============================================================================
# WALLET CONFIGURATION - AWS SECRETS MANAGER
# ============================================================================
# Private keys are stored in AWS Secrets Manager (secret: 'karmacadabra')
#
# Setup (one-time):
#   1. Ensure ~/.aws credentials are configured
#   2. Run: python scripts/setup-secrets.py
#
# Local development override (optional):
#   - Leave VALIDATOR_PRIVATE_KEY empty to fetch from AWS Secrets Manager
#   - OR set VALIDATOR_PRIVATE_KEY=0x... to use local key (for testing)
#
# The agent will automatically:
#   - Use VALIDATOR_PRIVATE_KEY if filled in .env
#   - Otherwise, fetch from AWS Secrets Manager 'karmacadabra' secret
#
VALIDATOR_PRIVATE_KEY=                           # Leave empty to use AWS Secrets Manager
VALIDATOR_WALLET=0xYOUR_VALIDATOR_WALLET_ADDRESS

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================
RPC_URL=https://avalanche-fuji-c-chain-rpc.publicnode.com
CHAIN_ID=43113

# ============================================================================
# ERC-8004 CONTRACTS
# ============================================================================
IDENTITY_REGISTRY=0xYOUR_IDENTITY_REGISTRY_ADDRESS
REPUTATION_REGISTRY=0xYOUR_REPUTATION_REGISTRY_ADDRESS
VALIDATION_REGISTRY=0xYOUR_VALIDATION_REGISTRY_ADDRESS

# ============================================================================
# GLUE TOKEN
# ============================================================================
GLUE_TOKEN_ADDRESS=0x3D19A80b3bD5CC3a4E55D4b5B753bC36d6A44743

# ============================================================================
# VALIDATOR AGENT CONFIGURATION
# ============================================================================
VALIDATOR_DOMAIN=validator.karmacadabra.ultravioletadao.xyz

# Validation fee (charged to buyer, in GLUE with 6 decimals)
VALIDATION_FEE_GLUE=1000                         # 0.001 GLUE

# ============================================================================
# CREWAI / OPENAI
# ============================================================================
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY_HERE
CREW_MODEL=gpt-4o
CREW_TEMPERATURE=0.7
CREW_MAX_ITERATIONS=3

# ============================================================================
# VALIDATION CRITERIA
# ============================================================================
# Minimum score to pass validation (0-100)
MIN_VALIDATION_SCORE=60

# Timeouts
VALIDATION_TIMEOUT_SECONDS=30
CREW_TIMEOUT_SECONDS=20

# ============================================================================
# DATA STORAGE (Temporary for validation)
# ============================================================================
# Where to store data being validated
DATA_CACHE_DIR=./data
VALIDATION_RESULTS_DIR=./validations

# Cleanup after (hours)
DATA_CACHE_TTL_HOURS=24

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
HOST=0.0.0.0
PORT=9001

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# MONITORING
# ============================================================================
# Track validator performance
ENABLE_METRICS=true
METRICS_PORT=9090
